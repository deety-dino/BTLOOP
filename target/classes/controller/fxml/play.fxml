<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="root" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: black" focusTraversable="true"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.control.Play">
    <Group fx:id="buttonGroup">
        <Button layoutX="752.0" mnemonicParsing="false" onAction="#clickPause" text="Pause" />
        <Button mnemonicParsing="false" onAction="#clickToHome" text="Home" />
    </Group>
    <Group fx:id="gamePlay" />
    <Group fx:id="pane" layoutX="300.0" layoutY="250.0" visible="false">
        <Label layoutX="55.0" text="Game Over!" textFill="#fffcfc">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Button layoutX="-10.0" layoutY="70.0" mnemonicParsing="false" onAction="#clickToHome" text="Home" />
        <Button layoutX="69.0" layoutY="70.0" mnemonicParsing="false" onAction="#clickRestart" text="Restart" />
        <Button layoutX="161.0" layoutY="70.0" mnemonicParsing="false" onAction="#clickNext" text="Next" />
    </Group>
</Pane>
