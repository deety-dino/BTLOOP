<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="root" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.control.controller">
    <Group fx:id="helloView">
        <Button fx:id="hello_playButton" alignment="CENTER" layoutX="360.0" layoutY="285.0" onAction="#toLevelSelection" text="HOME_PLAY" />
    </Group>
    <Group fx:id="levelSelectionView">
        <Button fx:id="level_homeButton" layoutY="285.0" onAction="#toHome" text="LEVEL_HOME" />
        <Button fx:id="level_playButton" alignment="CENTER" layoutX="726.0" layoutY="285.0" onAction="#toGame" text="LEVEL_PLAY" />
    </Group>
    <Group fx:id="inGameView">
        <Button fx:id="ingame_homeButton" alignment="CENTER" contentDisplay="CENTER" onAction="#toHome" text="HOME" />
        <Button fx:id="ingame_pauseButton" alignment="BOTTOM_RIGHT" layoutX="749.0" layoutY="574.0" onAction="#pauseGame" text="PAUSE" />
    </Group>
</Pane>
